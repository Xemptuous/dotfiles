// -*- mode: json -*-
{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "bottom",
  "modules-left": [
    "sway/workspaces",
    "hyprland/workspaces"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    // "pulseaudio",
    "wireplumber",
    "cpu",
    "temperature",
    "memory",
    "disk",
    "network",
    "custom/vpn",
    // "battery",
    "tray",
    "gpu"
  ],
  "hyprland/workspaces": {
    "persistent-workspaces": {
      "*": 10
    },
    "disable-scroll": true,
    "sort-by-name": true,
    "show-special": true,
    "special-visible-only": true,
    "format": "<sub>{icon}</sub> {windows}",
    // "format": "{icon} {windows}",
    "format-icons": {
      "default": "ÓÆ¥",
      "focused": "ÓÆ¥",
      "active": "ÓÆ¥",
      "empty": "ÔÑå"
    },
    "window-rewrite-default": "ÓÆ¥",
    "window-rewrite": {
      "class<Alacritty>": "ÔÑ†",
      "class<Foot>": "ÔÑ†",
      "class<org.qutebrowser.qutebrowser>": "Ôâ®",
      "class<Alacritty> title<.*nv.*": "ÔçØ",
      "class<Foot> title<.*nv.*": "ÔçØ",
      "class<steam>": "ÔÜ∂"
    }
  },
  "sway/workspaces": {
    "disable-scroll": true,
    "format": "{name}"
  },
  "clock": {
    "format": "{:%a   %H:%M:%S   %m-%d}",
    "timezone": "America/Los_Angeles",
    "interval": 1,
    "max-length": 50,
    // "format": "{:%Y-%m-%d   %H:%M:%S}",
    // "format-alt": "{:%Y-%m-%d   %H:%M:%S}",
    "tooltip-format": "<tt>{calendar}</tt>",
    // "tooltip-format": "<tt><small>{calendar}</small></tt>",
    // "format": "{:%H:%M} ÔÄó ",
    // "format-alt": "{:%A, %B %d, %Y (%R)} ÔóØ ",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#1e66f5'>{}</span>",
        "days": "<span color='#7c7f93'>{}</span>",
        "weeks": "<span color='#7287fd'>W{}</span>",
        "weekdays": "<span color='#df8e1d'>{}</span>",
        "today": "<span color='#d20f39'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "ÔÄ¶",
    "on-click": "pavucontrol",
    "format-icons": [
      "ÔÄ¶",
      "ÔÄß",
      "ÔÄ®"
    ]
  },
  "pulseaudio": {
    "format": "{icon} {volume:2}%",
    "format-bluetooth": "{icon}  {volume}%Ôäî",
    "format-muted": "MUTE",
    "format-icons": {
      "headphones": "ÔÄ•",
      "default": [
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "scroll-step": 5,
    "on-click": "pamixer -t",
    "on-click-right": "pavucontrol"
  },
  "network": {
    "interval": 1,
    "format-wifi": "Û∞ñ© {essid} ({signalStrength}%)",
    "format-ethernet": "Û∞ñ© {ifname}",
    "tooltip-format": "{ifname} via {gwaddr} @ {ipaddr}",
    "format-linked": "{ifname} (No IP)",
    "format-disconnected": "Disconnected",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
    "on-click": "st -e 'nmtui'",
    "on-click-right": "$HOME/.config/waybar/toggle_network.sh"
  },
  "custom/vpn": {
    "interval": 3,
    "format": "Û∞ñÇ {}",
    "exec": "ip add show | grep -qF tun0 && echo üîí Connected || echo üîì Disconnected",
    "max-length": "100"
  },
  "memory": {
    "interval": 5,
    // "format": "Mem {}%"
    "format": "ÓøÖ {used:0.1f}/{total:0.1f}"
  },
  "cpu": {
    "interval": 1,
    "format": "Ôíº {usage:2}%"
  },
  "temperature": {
    // "thermal-zone": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
    "critical-threshold": 80,
    "interval": 1,
    // "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "Ôãã{temperatureC}¬∞C"
    // "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
  },
