  // 		"ÔâÅ",
  // 		"ÔâÄ"
  // 	]
  // },
  "disk": {
    // "format": "Disk {percentage_used:2}%",
    "path": "/",
    "interval": 30,
    "unit": "GiB",
    "format": "ÔÇ† {specific_used:0.1f}/{specific_total:0.1f}"
  },
  "gpu": {
    "exec": "~/.scripts/get_vram_waybar.sh",
    "format": "ÔÜ† {}",
    "return-type": "",
    "interval": 1
  }
